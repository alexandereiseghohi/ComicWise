{
  "compounds": [
    {
      "name": "ðŸš€ Full Stack Debug",
      "configurations": ["Next.js Dev", "Attach to Chrome"],
      "presentation": { "group": "primary", "order": 1 },
      "stopAll": true
    },
    {
      "name": "ðŸ§ª Complete Test Suite",
      "configurations": ["Vitest Tests", "Playwright Tests"],
      "presentation": { "group": "testing", "order": 1 },
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Next.js Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--enable-source-maps --max-old-space-size=8192"
      },
      "presentation": { "group": "development", "order": 1 }
    },
    {
      "name": "Next.js Debug Mode",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev:debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "port": 9229,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "presentation": { "group": "development", "order": 2 }
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "urlFilter": "http://localhost:3000/*"
    },
    {
      "name": "Vitest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test:unit"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "group": "testing", "order": 1 }
    },
    {
      "name": "Playwright Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "group": "testing", "order": 2 }
    },
    {
      "name": "TypeScript Check",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["type-check"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "group": "validation", "order": 1 }
    },
    {
      "name": "ESLint",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["lint"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "group": "validation", "order": 2 }
    },
    {
      "name": "Database Seed",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["db:seed"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "group": "database", "order": 1 }
    },
    {
      "name": "Database Studio",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["db:studio"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "group": "database", "order": 2 }
    }
  ],
  "version": "0.2.0"
}
